set -e

MAKE_OPTIONS="TARGET_OS=linux_android COLOR_TYPE=COLOR32BITS STYPE=PS_STYPE_FLOAT32"

make -j16 $MAKE_OPTIONS TARGET_ARCH=arm
make install $MAKE_OPTIONS TARGET_ARCH=arm
make clean

make -j16 $MAKE_OPTIONS TARGET_ARCH=arm64
make install $MAKE_OPTIONS TARGET_ARCH=arm64
make clean

make -j16 $MAKE_OPTIONS TARGET_ARCH=x86
make install $MAKE_OPTIONS TARGET_ARCH=x86
make clean

make -j16 $MAKE_OPTIONS TARGET_ARCH=x86_64
make install $MAKE_OPTIONS TARGET_ARCH=x86_64
make clean
